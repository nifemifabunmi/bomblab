\fs32 \uc0\u8232 
\f2 \
\ls8\ilvl0
\fs43\fsmilli21600 \cf2 \cb4 \kerning1\expnd0\expndtw0 \outl0\strokewidth0 		\expnd0\expndtw0\kerning0
